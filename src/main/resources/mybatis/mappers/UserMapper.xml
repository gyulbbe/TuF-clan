<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.github.gyulbbe.user.mapper.UserMapper">

    <!-- 사용자 등록 -->
    <insert id="insertUser" parameterType="RegisterUserDto">
        INSERT INTO users (
            user_id,
            password,
            name,
            tier,
            race,
            photo,
            status,
            user_type
        ) VALUES (
            #{userId},
            #{password},
            #{name},
            #{tier},
            #{race},
            #{photo},
            'ACTIVE',
            'USER'
        )
    </insert>

</mapper>
